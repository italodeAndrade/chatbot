<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/pokemonDetailImage"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/pokemonDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PokÃ©mon Name"
            android:textStyle="bold"
            android:textSize="46sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/pokemonDetailWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight: X kg"
            android:textSize="24sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/pokemonDetailTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Types: Grass, Poison"
            android:textSize="32sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/pokemonDetailDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description here..."
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
